{
  "name": "ssh-config-editor",
  "version": "1.1.0",
  "description": "SSH Config Editor for Windows - A GUI application to manage SSH config files",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "webpack --mode development --watch",
    "build": "webpack --mode production",
    "clean": "rimraf dist",
    "dist": "npm run build && electron-builder"
  },
  "keywords": [
    "ssh",
    "config",
    "editor",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "css-loader": "^6.8.1",
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12",
    "html-webpack-plugin": "^5.5.4",
    "rimraf": "^5.0.5",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@hello-pangea/dnd": "^16.5.0",
    "iconv-lite": "^0.7.0",
    "jschardet": "^3.1.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "build": {
    "appId": "com.ssh-config-editor",
    "productName": "SSH Config Editor",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
